.slide-image{
  width: 90%;
  height: 280rpx;
  margin: 0 5% 20rpx;
  border-radius: 10rpx
}

.descover-tab{
  font-size: 28rpx;
}

.wrap.lll {
  display: block;
  height: 300rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
}
.wrap.lll .item {
  font-size: 24rpx;
  line-height: 300rpx;
  text-align: center;
}
.side {
  width: 200rpx;
  background: #afdde3;
  flex-grow: 0;
}
.main {
  background: #f397b2;
  flex-grow: 1;
}

.wrap.book {
  display: block;
  padding: 1%;
}
.wrap.book .item {
  width: 31.33333%;
  margin: 1%;
  flex-grow: 0;
  padding-bottom: 10rpx;
  background: #fff;
  border: dashed #bfbfbf 2rpx;
  border-radius: 8rpx;
  box-sizing: border-box
}

.movie-title{
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.movie-img{
  width: 90%;
  margin: 5%;
  display: block
}
.wrap.movie {
  display: block;
  padding: 1%;
}
.wrap.movie .item {
  width: 31.33333%;
  margin: 1%;
  flex-grow: 0;
  padding-bottom: 10rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 2rpx #dfdfdf;
}